@page
@model TriviaWebRazorPages.Pages.TriviaModel

<h2>Trivia Categorieën</h2>

<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <a href="/Trivia/Category?CategoryId=@category.Id" class="btn btn-primary">
                        Start Quiz
                    </a>
                </div>
            </div>
        </div>
    }
</div>
