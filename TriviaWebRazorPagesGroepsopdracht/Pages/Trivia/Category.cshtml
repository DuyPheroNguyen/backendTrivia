@page
@model TriviaWebRazorPages.Pages.Trivia.CategoryModel
@{
    ViewData["Title"] = $"Categorie: {Model.Category}";
}

<h2>Gekozen categorie: @Model.Category</h2>

<div class="mb-3">
    <span class="badge bg-info">Vraag @(Model.CurrentQuestionIndex + 1) van @Model.TotalQuestions</span>
</div>

@if (Model.CurrentQuestion != null)
{
    <div>
        <h3>@Model.CurrentQuestion.Text</h3>
        <p class="text-muted">Moeilijkheid: @Model.CurrentQuestion.Difficulty</p>

        <!-- Antwoorden -->
        <form method="post">
            @{
                int idx = 0;
            }
            @foreach (var choice in Model.CurrentChoices)
            {
                <button type="submit" name="choiceIndex" value="@idx" class="btn btn-outline-primary m-1">
                    @choice.Text
                </button>
                idx++;
            }
        </form>

        <!-- Feedback -->
        @if (!string.IsNullOrEmpty(Model.AnswerResult))
        {
            <div class="alert @(Model.AnswerResult.Contains("Correct") ? "alert-success" : "alert-danger") mt-3">
                @Model.AnswerResult
            </div>
            
            @if (!string.IsNullOrEmpty(Model.CurrentQuestion.Explanation))
            {
                <div class="alert alert-info">
                    <strong>Uitleg:</strong> @Model.CurrentQuestion.Explanation
                </div>
            }
        }

        <!-- Volgende vraag -->
        @if (Model.QuestionsInCategory != null && Model.QuestionsInCategory.Count > 1)
        {
            <form method="get" class="mt-3">
                <input type="hidden" name="category" value="@Model.Category" />
                <input type="hidden" name="CurrentQuestionIndex" value="@(Model.CurrentQuestionIndex + 1)" />
                <button type="submit" class="btn btn-secondary">Volgende vraag</button>
            </form>
        }
    </div>
}
else 
{
    <p>Geen vraag beschikbaar voor deze categorie.</p>
}
