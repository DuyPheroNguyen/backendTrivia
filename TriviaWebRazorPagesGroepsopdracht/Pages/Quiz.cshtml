@page
@model TriviaWebRazorPages.Pages.QuizModel

<h2>Random Trivia Quiz</h2>

<div class="mb-3">
    <span class="badge bg-success">Score: @Model.Score</span>
</div>

@if (Model.CurrentQuestion == null)
{
    <p>Geen vraag geladen.</p>
}
else
{
    <div>
        <h3>@Model.CurrentQuestion.Text</h3>
        <p class="text-muted">Moeilijkheid: @Model.CurrentQuestion.Difficulty | Type: @Model.CurrentQuestion.Type</p>

        <form method="post">
            @for (int i = 0; i < Model.CurrentChoices.Count; i++)
            {
                <button type="submit" name="choiceIndex" value="@i" class="btn btn-outline-primary m-2">
                    @Model.CurrentChoices[i].Text
                </button>
            }
        </form>

        @if (!string.IsNullOrEmpty(Model.AnswerResult))
        {
            <div class="alert @(Model.AnswerResult.Contains("Correct") ? "alert-success" : "alert-danger") mt-3">
                @Model.AnswerResult
            </div>
            
            @if (!string.IsNullOrEmpty(Model.CurrentQuestion.Explanation))
            {
                <div class="alert alert-info">
                    <strong>Uitleg:</strong> @Model.CurrentQuestion.Explanation
                </div>
            }
            
            <form method="get" class="mt-3">
                <input type="hidden" name="CurrentQuestionIndex" value="@(Model.CurrentQuestionIndex + 1)" />
                <button type="submit" class="btn btn-primary">Volgende vraag</button>
            </form>
        }
    </div>
}
